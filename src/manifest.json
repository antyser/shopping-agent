{
  "manifest_version": 3,
  "name": "Shopping Agent",
  "version": "0.1.0",
  "description": "AI Assistant for smarter shopping.",
  "permissions": [
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
